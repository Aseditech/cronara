generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Staff {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  role      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Appointment {
  id          String   @id @default(uuid())
  title       String
  description String?
  startsAt    DateTime
  endsAt      DateTime
  staff       Staff?   @relation(fields: [staffId], references: [id])
  staffId     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
